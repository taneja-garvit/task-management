{
  "info": {
    "_postman_id": "task-management-collection",
    "name": "Task Management API",
    "description": "Complete API collection for Task Management application with authentication, teams, members, and tasks.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('token', jsonData.access_token);",
                  "    pm.test('Token received', function () {",
                  "        pm.expect(jsonData.access_token).to.exist;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with hardcoded credentials to get a JWT token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Teams",
      "item": [
        {
          "name": "Create Team",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('teamId', jsonData.id);",
                  "    pm.test('Team created with ID', function () {",
                  "        pm.expect(jsonData.id).to.exist;",
                  "        pm.expect(jsonData.name).to.equal('Engineering');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Engineering\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/teams",
              "host": ["{{base_url}}"],
              "path": ["teams"]
            },
            "description": "Create a new team"
          },
          "response": []
        },
        {
          "name": "Add Member to Team",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Member added to team', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"alice\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/teams/{{teamId}}/members",
              "host": ["{{base_url}}"],
              "path": ["teams", "{{teamId}}", "members"]
            },
            "description": "Add a member to an existing team. Repeat this with different usernames (bob, charlie, etc.)"
          },
          "response": []
        },
        {
          "name": "Get All Teams",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/teams",
              "host": ["{{base_url}}"],
              "path": ["teams"]
            },
            "description": "Retrieve all teams"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('taskId', jsonData.id);",
                  "    pm.test('Task created with ID', function () {",
                  "        pm.expect(jsonData.id).to.exist;",
                  "        pm.expect(jsonData.description).to.equal('Fix critical bug');",
                  "        pm.expect(jsonData.status).to.equal('OPEN');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Fix critical bug\",\n  \"due_date\": \"2025-12-31\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tasks",
              "host": ["{{base_url}}"],
              "path": ["tasks"]
            },
            "description": "Create a new task with description and due date"
          },
          "response": []
        },
        {
          "name": "Assign Task to Member",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"alice\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tasks/{{taskId}}/assign",
              "host": ["{{base_url}}"],
              "path": ["tasks", "{{taskId}}", "assign"]
            },
            "description": "Assign a task to a team member by username"
          },
          "response": []
        },
        {
          "name": "Update Task Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"IN_PROGRESS\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tasks/{{taskId}}",
              "host": ["{{base_url}}"],
              "path": ["tasks", "{{taskId}}"]
            },
            "description": "Update task status. Valid statuses: OPEN, IN_PROGRESS, DONE"
          },
          "response": []
        },
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tasks",
              "host": ["{{base_url}}"],
              "path": ["tasks"]
            },
            "description": "Retrieve all tasks"
          },
          "response": []
        },
        {
          "name": "Get Tasks by Assignee",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tasks?assignee=alice",
              "host": ["{{base_url}}"],
              "path": ["tasks"],
              "query": [
                {
                  "key": "assignee",
                  "value": "alice"
                }
              ]
            },
            "description": "Retrieve all tasks assigned to a specific team member"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "teamId",
      "value": "",
      "type": "string"
    },
    {
      "key": "taskId",
      "value": "",
      "type": "string"
    }
  ]
}
